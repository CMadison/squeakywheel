<div class="container pad">
  <h1>Login</h1>
  <%= bootstrap_form_for(:user) do |f| %>
  <%= f.email_field :email %>
  <%= f.password_field :password %>
  <%= f.submit 'Login', class: 'btn btn-success'%>
  <%= link_to('Login with Facebook', '/auth/facebook', class: 'btn btn-primary') %>
  <% end %>
</div>